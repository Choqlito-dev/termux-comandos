#!/data/data/com.termux/files/usr/bin/bash

# Detalles del dispositivo
echo -e "\e[1;36mğŸ“± Detectando dispositivo...\e[0m"
model=$(getprop ro.product.model)
brand=$(getprop ro.product.brand)
version=$(getprop ro.build.version.release)

echo -e "\e[1;33mâœ… Dispositivo detectado: $brand $model - Android $version\e[0m"
sleep 1

# Liberar RAM
echo -e "\nğŸš€ Liberando RAM y cerrando apps en segundo plano..."
am kill-all
sleep 1

# OptimizaciÃ³n de archivos temporales
echo -e "\nğŸ§¹ Limpiando basura temporal..."
rm -rf /data/data/com.termux/files/home/tmp/*
rm -rf /data/data/com.termux/files/usr/tmp/*
sleep 1

# Ajustes de touch (solo si el kernel lo permite)
echo -e "\nğŸ¯ Ajustando sensibilidad tÃ¡ctil..."
settings put system pointer_speed 7
sleep 1

# Aumentar prioridad (solo visible si FF estÃ¡ abierto)
echo -e "\nâš™ï¸ Preparando entorno para mÃ¡ximo rendimiento..."
renice -n -20 -p $$ > /dev/null 2>&1

# Resultado final
echo -e "\nâœ… OptimizaciÃ³n completa. Â¡Ya puedes entrar a Free Fire y pegar todo rojo! ğŸ”¥ğŸ”¥ğŸ”¥"
termux-toast -b red -g middle -s "Optimizador completado. Â¡Pega todo rojo!"


